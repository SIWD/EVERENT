<h1>Listing bands</h1>

<table>
  <thead>
    <tr>
      <th>Maxcapacity</th>
      <th>Members</th>
      <th>Userservice</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.maxCapacity %></td>
        <td><%= band.members %></td>
        <td><%= band.userService %></td>
        <td><%= band.category %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

