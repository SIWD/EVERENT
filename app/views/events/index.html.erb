<% content_for :title, 'Events' %>

<table class="listingTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td>
          <% if event.password.length >= 1 %>
              <%= link_to 'Anzeigen (Passwort)', event %>
          <% else %>
              <%= link_to 'Anzeigen', event %>
              <% end %>

            <% if current_user %>
                <% if current_user.has_role? :eventOwner, event %>
                    &nbsp;|&nbsp;<%= link_to 'Bearbeiten', edit_event_path(event) %>
                    &nbsp;|&nbsp;<%= link_to 'LÃ¶schen', event, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
              <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

