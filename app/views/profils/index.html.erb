<h1>Listing profils</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Streetname</th>
      <th>Housenumber</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profils.each do |profil| %>
      <tr>
        <td><%= profil.gender %></td>
        <td><%= profil.firstname %></td>
        <td><%= profil.lastname %></td>
        <td><%= profil.phone %></td>
        <td><%= profil.city %></td>
        <td><%= profil.postcode %></td>
        <td><%= profil.streetname %></td>
        <td><%= profil.housenumber %></td>
        <td><%= profil.user %></td>
        <td><%= link_to 'Show', profil %></td>
        <td><%= link_to 'Edit', edit_profil_path(profil) %></td>
        <td><%= link_to 'Destroy', profil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

