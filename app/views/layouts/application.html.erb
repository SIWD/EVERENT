                <% end %>
                <li><%= yield(:title) %></li>
              </ul>
            </div>
          </div>
          -->
        </div>
      </div>
    </div>
    <!-- Title, Breadcrumb End-->
    <!-- Main Content start-->
    <div class="content">
      <div class="container">
        <% bootstrap_flash %>
        <%= render 'layouts/messages' %>

        <!--<script>
