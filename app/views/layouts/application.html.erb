<div class="wrap">
  <!-- Header Start -->
  <header id="header">
    <!-- Header Top Bar Start -->
    <div class="top-bar">
      <div class="slidedown collapse">
        <div class="container">
          <div class="phone-email pull-left">
            <a><i class="fa fa-phone"></i> Call Us : +49 176 237 210 37</a>
            <a href="info@everent.de"><i class="fa fa-envelope"></i> Email : info@everent.de</a>
          </div>
          <div class="follow-us pull-right">
            <ul class="social pull-left">
              <li class="facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
              <li class="twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
            </ul>
            <div id="search-form" class="pull-right">
              <form action="#" method="get">
                <input type="text" class="search-text-box" placeholder="Search...">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Header Top Bar End -->
    <!-- Main Header Start -->
    <div class="main-header">
      <div class="container">
        <!-- TopNav Start -->
        <div class="topnav navbar-header">
          <a class="navbar-toggle down-button" data-toggle="collapse" data-target=".slidedown">
            <i class="fa fa-angle-down icon-current"></i>
          </a>
        </div>
        <!-- TopNav End -->
        <!-- Logo Start -->
        <div class="logo pull-left">
          <h1>
            <%= link_to (welcomes_path) do %>
              <%= image_tag ('everent_logo.png'), alt: "EVERENT", width:"125"%>
            <% end %>
          </h1>
        </div>
        <!-- Logo End -->
        <!-- Mobile Menu Start -->
        <div class="mobile navbar-header">
          <a class="navbar-toggle" data-toggle="collapse" href=".navbar-collapse">
            <i class="fa fa-bars fa-2x"></i>
          </a>
        </div>
        <!-- Mobile Menu End -->
        <!-- Menu Start -->
        <nav class="collapse navbar-collapse menu">
          <ul class="nav navbar-nav sf-menu">
            <% unless current_user %>
                <li><%= link_to "Registrieren", new_user_registration_path  %></li>
            <% end %>
            <% unless current_user %>
                <li><%= link_to "Login", new_user_session_path %></li>
            <% else %>
                <li>
                  <a id="current" href="">
                    <%= current_user.email %>
                    <span class="sf-sub-indicator">
                           <i class="fa fa-angle-down "></i>
                           </span>
                  </a>
                  <ul>
                    <% if Profile.find_by_user_id(current_user) %>
                        <li><%= link_to "Profil zeigen", profile_path(Profile.find_by_user_id(current_user)), class: 'sf-with-ul' %></li>
                    <% else %>
                        <li><%= link_to "Profil anlegen", new_profile_path, class: 'sf-with-ul' %></li>
                    <% end %>
                    <li><%= link_to "Logout", destroy_user_session_path, class: 'sf-with-ul', method: :delete %></li>
                  </ul>
                </li>
            <% end %>
          </ul>
        </nav>
        <!-- Menu End -->
      </div>
    </div>
    <!-- Main Header End -->
  </header>
