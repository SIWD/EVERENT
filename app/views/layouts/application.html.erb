        <%= yield %>
      </div>
      <!-- /container -->
    </div>
  </div>
  <footer id="footer">
    <div class="footer-top">
      <div class="container">
        <div class="row">
          <section class="col-lg-6 col-md-6 col-xs-12 col-sm-6 footer-one">
            <h3>Über uns</h3>

            <p>
              Partychamp - Suchen Finden Feiern <br>
              Alles für Ihr Event!
            </p>
          </section>
          <section class="col-lg-3 col-md-3 col-xs-12 col-sm-6 footer-two">
            <h3>Kontakt</h3>
            <ul class="contact-us">
              <li>
                <i class="fa fa-map-marker"></i>

                <p>
                  <strong class="contact-pad">Adresse:</strong>
                  Partychamp<br>
                  Körnerstraße 5<br>
                  33803 Steinhagen
                </p>
              </li>
              <!--
              <li>
                <i class="fa fa-phone"></i>
                <p><strong>Phone:</strong></p>
              </li>
              -->
              <li>
                <i class="fa fa-envelope"></i>

                <p><strong>Email:</strong><a href="mailto:info@partychamp.de">info@partychamp.de</a></p>
              </li>
            </ul>
          </section>
          <section class="col-lg-3 col-md-3 col-xs-12 col-sm-12 footer-three">
            <h3>Verweise</h3>
            <ul class="">
              <li><%= link_to "Impressum", impressum_path %></li>
              <li><%= link_to "AGB", agb_path %></li>
              <li><%= link_to "Datenschutzerklärung", privacy_path %></li>
            </ul>
          </section>
        </div>
      </div>
    </div>
    <!-- Footer Top End -->
    <div class="footer-bottom">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12 ">&copy; Partychamp 2015. All Rights Reserved.</div>
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12 ">
            <ul class="social social-icons-footer-bottom">
              <li class="facebook">
                <a href="https://www.facebook.com/partychamp" data-toggle="tooltip" title="Facebook"><i class="fa fa-facebook"></i></a>
              </li>
              <!--<li class="twitter"><a href="#" data-toggle="tooltip" title="Twitter"><i class="fa fa-twitter"></i></a></li>-->
            </ul>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <!-- Scroll To Top -->
  <a href="#" class="scrollup"><i class="fa fa-angle-up"></i></a>
</div>
<!-- /wrap -->

<section id="style-switcher">
  <h2>Verbesser Partychamp! <a href="#"><i class="fa fa-heart"></i></a></h2>

  <div>
    <h3>Dir gefällt etwas nicht?</h3>
    <%= form_tag("", method: :get) do %>
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <%= label :mail, :name %>
            <%= text_field :mail, :name, {value: "#{if current_user then Profile.where(user_id: current_user.id).first.name_with_initial end}", class: "form-control"} %>
          </div>
          <div class="col-lg-12 col-md-12">
            <%= label :mail, :mail %>
            <%= text_field :mail, :mail, {value: "#{if current_user then Profile.where(user_id: current_user.id).first.contact.mail end}", class: "form-control", type: 'email', required: true} %>
          </div>
          <div class="col-lg-12 col-md-12">
            <%= label :mail, :Betreff %>
            <%= text_field :mail, :subject, class: "form-control" %>
          </div>
          <div class="col-lg-12 col-md-12">
            <%= label :mail, :Nachricht %>
            <%= text_area(:mail, :Nachricht, class: "form-control small-textarea")  %>
          </div>
          <div class="col-lg-12 col-md-12 ">
            <%= submit_tag 'Senden', {class: "btn btn-special btn-color"} %>
          </div>
        </div>
    <% end %>
   </div>
</section>
</body>


<%= javascript_include_tag "application_last" %>
</html>
