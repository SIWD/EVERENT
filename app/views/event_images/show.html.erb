<% content_for :title, "Bilder von: #{Event.find(params[:id]).name}" %>
<p id="notice"><%= notice %></p>

<%= link_to 'Zurück zum Event', event_path(params[:id]) %>
<div class="divider"></div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
      <% @event_images.each do |i| %>

          <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 event-image-show">
            <%= link_to i.image.url, {rel: "prettyPhoto[pp_gal]"} do %>
                <%= image_tag i.image.url(:event_index), alt: "" %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="divider"></div>
<%= link_to 'Zurück zum Event', event_path(params[:id]) %>
